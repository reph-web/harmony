{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block body %}
<p class="fs-5 text mt-2 bg-dark p-2">
    <span class="text-white">Logged as {{app.user.username}}</span>
</p>

<div class="row w-50 mx-auto">
<div class="d-grid gap-3">
    <a class="btn btn-lg btn-primary w-60" href="{{ path('app_profilePage', {'username' : app.user.username}) }}">Profile page</a>
    <a class="btn btn-lg btn-primary w-60" href="{{ path('app_chat') }}">Chat</a>
    <a class="btn btn-lg btn-primary w-60" href="{{ path('app_logout') }}">Logout</a>
    {% if is_granted('ROLE_ADMIN') %}
        <a class="btn btn-lg btn-primary w-60" href="{{ path('app_admin') }}">Admin page</a>
    {% endif %}
</div>
</div>
{% endblock %}
